<%- include("./partials/header.ejs", {title}) %>

<div class = "notebook" id = "addNote-notebook">
    <form
        action = "/notes/add"
        method = "POST"
    >
        <!--Title-->
        <div id = "addNote-notebook-title">
            <input 
                type = "text"
                name = "title"
                placeholder = "Enter note title"
            >
        </div>

        <!--Content-->
        <div id = "addNote-notebook-content">
            <textarea
                name = "content"
                placeholder = "Enter note body"
            ></textarea>
        </div>

        <!--Submit Button-->
        <div id = "addNote-notebook-submit">
            <button type = "submit"></button>
        </div>
    </form>
</div>

<!--Back button-->
<a href = "/notes" id = "addNote-back">
    <button></button>
</a>

<%- include("./partials/footer.ejs") %>