<%- include("./partials/header.ejs", {title}) %>

<div class = "notebook">
    <form
        action = "/notes/add"
        method = "POST"
    >
        <!--Title-->
        <div class = "title">
            <input 
                type = "text"
                name = "title"
                placeholder = "Enter note title (required)"
            >
        </div>

        <!--Content-->
        <div class = "content">
            <textarea
                name = "content"
                placeholder = "Enter note body"
            ></textarea>
        </div>

        <button type = "submit" class = "submit"></button>
    </form>
</div>

<%- include("./partials/footer.ejs") %>